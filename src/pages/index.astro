---
const name = "Izzi";
const style = "purple";
const hide = "cloaked";

const response = await fetch(
	"https://jsonplaceholder.typicode.com/users?_limit=10"
);
// const user = await response.json();
const users = [
	{ name: "Izzi", age: 25 },
	{ name: "John", age: 30 },
	{ name: "Jane", age: 35 },
];

const visible = false;
---

<!-- Consider useing a fragment, as a wrapper <> </> -->
<>
	<h1 class={style}>Hello World! {name}</h1>
	<ul>
		<!-- Loop through the users array -->
		{
			users.map((user) => (
				<li>
					{user.name} is {user.age} years old
				</li>
			))
		}
	</ul>
	<!-- If visible show the sentence -->
	{visible && <p>You can see me, I am visible</p>}
	<!-- Else -->
	{
		visible ? (
			<p>I am visible</p>
		) : (
			<p class={hide}>I am supposed to be invisible</p>
		)
	}
</>
<!-- Scoped Styling -->
<style>
	h1 {
		color: red;
	}
	.purple {
		color: purple;
	}
	.cloaked {
		color: rgb(181, 181, 181);
	}
</style>
